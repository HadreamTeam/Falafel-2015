package libPurple;

import edu.wpi.first.wpilibj.Victor;
/*
 *  						*** 3075 ***
 * This class is an improvment to the regular victor including:
 * * Slave
 * * MotorBound
 * * Invert
 */
public class Victor3075 extends Victor implements SpeedController3075{
	
	boolean inverted = false;
	
	private Victor3075 slave; //This is the slave of the victor.
	
	/*
	 * This constructor does not do anything.
	 */
	public Victor3075(int channel) {
		super(channel);
		// TODO Auto-generated constructor stub
	}
	
	/*
	 * Sets the slave of the victor.
	 */
	public void setSlave(Victor3075 slave)
	{
		this.slave = slave;
	}
	
	/*
	 * Sets the value of the motor.
	 */
	public void set(double value)
	{
		super.set(inverted?-value:value);
		if (slave != null)
			slave.set(inverted?-value:value);
	}
	
	@Override
	public void pidWrite(double value)
	{
		
	}

	@Override
	public void setInverted(boolean isInverted) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void setMotorBound(double newMotorBound) {
		// TODO Auto-generated method stub
		
	}
	
}
