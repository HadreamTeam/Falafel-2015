package org.usfirst.frc.team3075.robot.subsystems;

import edu.wpi.first.wpilibj.Victor;

public class Victor3075 extends Victor {
    private boolean inverted = false;
    private final double MB = 0.1;
    // Put methods for controlling this subsystem
    // here. Call these from Commands.

    public Victor3075(int channel) {
		super(channel);
		// TODO Auto-generated constructor stub
	}
    
    @Override
    public double get() {
    	// TODO Auto-generated method stub
    	return super.get()*(inverted ? -1 : 1); 
    	
    }
    
    public void setInverted(boolean isInverted)
    {
    	inverted = isInverted;
    }
    
    public double motorBound(double x)
    {
    	return Math.signum(x)* (Math.abs(x)-(MB*Math.abs(x))+MB);
    	
    }
}
