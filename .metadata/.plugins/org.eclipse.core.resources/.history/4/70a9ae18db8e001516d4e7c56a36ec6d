package org.usfirst.frc.team3075.robot.commands;

import org.usfirst.frc.team3075.robot.OI;
import org.usfirst.frc.team3075.robot.Robot;
import org.usfirst.frc.team3075.robot.RobotMap;

import edu.wpi.first.wpilibj.command.Command;


public class MoveOneSlot extends Command {
	private double error = 0;
	private double initialValue = 0;
    public MoveOneSlot() {
        // Use requires() here to declare subsystem dependencies
        // eg. requires(chassis);
    	
    	requires(Robot.conveyor);
    }

    // Called just before this Command runs the first time
    protected void initialize() 
    {
//    	OI.conveyorEncoder.reset(); 
    	initialValue = OI.conveyorEncoder.getDistance();
    	error = RobotMap.slotLength;
    }

    // Called repeatedly when this Command is scheduled to run
    protected void execute() {
    	//Proportional motor speeds
    	error = RobotMap.slotLength - (initialValue - OI.conveyorEncoder.getDistance());
    	Robot.conveyor.setSpeed(error / RobotMap.kpConveyor);
    }

    // Make this return true when this Command no longer needs to run execute()
    protected boolean isFinished() {
        return error >= RobotMap.slotLength;
    }

    // Called once after isFinished returns true
    protected void end() {
    }

    // Called when another command which requires one or more of the same
    // subsystems is scheduled to run
    protected void interrupted() {
    }
}
